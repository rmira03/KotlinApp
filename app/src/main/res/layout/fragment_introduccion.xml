<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.introduccion.IntroduccionFragment">

    <TextView
        android:id="@+id/textIntroduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginBottom="12dp"/>


    <TextView
        android:id="@+id/textInt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Se ha vuelto muy popular ya que es compatible con Java (uno de los lenguajes de programación más populares que existen), lo que significa que el código Java (y las bibliotecas) pueden ser se utiliza en los programas de Kotlin."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIntroduccion"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/textInt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Kotlin se usa para:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInt2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textInt4"
        android:layout_width="371dp"
        android:layout_height="87dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="1) Aplicaciones móviles (especialmente aplicaciones Android)\n2) Desarrollo web\n3) Aplicaciones del lado del servidor\n4) Ciencia de datos\n\n¡Y mucho, mucho más!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInt3"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textInt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="¿Por que usar Kotlin?"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInt4"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/textInt6"
        android:layout_width="371dp"
        android:layout_height="126dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="1) Kotlin es totalmente compatible con Java\n2) Kotlin funciona en diferentes plataformas (Windows, Mac, Linux, Raspberry Pi, etc.)\n3) Kotlin es fácil de aprender, especialmente si ya conoces Java\n4) Kotlin es de uso gratuito\n5) Gran comunidad y apoyo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInt5"
        app:layout_constraintVertical_bias="0.055" />


</androidx.constraintlayout.widget.ConstraintLayout>